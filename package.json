{
  "name": "survey-platform",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @survey/builder dev",
    "dev:builder": "pnpm --filter @survey/builder dev",
    "dev:survey": "pnpm --filter @survey/app dev",
    "build": "pnpm -r build",
    "build:builder": "pnpm --filter @survey/builder build",
    "build:survey": "pnpm --filter @survey/app build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
